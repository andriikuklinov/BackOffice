<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--#region Colors-->
    <SolidColorBrush x:Key="NavigationBackground" Color="#2E2E2E" />
    <!--#endregion-->
    <!--#region Images-->
    <ControlTemplate x:Key="MainWindowAppIcon">
        <Image SnapsToDevicePixels="True" Stretch="Fill" RenderOptions.BitmapScalingMode="HighQuality" 
           Width="108" Height="33" Margin="-10 10 0 0" VerticalAlignment="Center"
           Source="/BackOffice.Theme.Main;Component/Images/backoffice_logo_128px.png"/>
    </ControlTemplate>
    <!--#endregion-->
    
    <!--#region Navigation-->
    <Style x:Key="Navigation" TargetType="{x:Type UserControl}">
        <Setter Property="Background" Value="{StaticResource NavigationBackground}"/>
    </Style>
    <!--#endregion-->
</ResourceDictionary>